<% provide(:title, "Edit article") %>
<div class="row">
  <div class="col-md-12">
    <%= form_for @article, html: {class: "edit-article-form"} do |f| %>
      <h2>Edit article</h2>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </p>
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text, class: "form-control", rows: "20" %>
      </p>
      <p>
        <%= f.submit "Update", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
