<% provide(:title, t(:edit_article)) %>
<div class="row">
  <div class="col-md-12">
    <%= form_for @article, html: {class: "edit-article-form"} do |f| %>
      <h2><%= t(:edit_article) %></h2>
      <p>
        <%= f.label t(:title) %><br>
        <%= f.text_field :title, class: "form-control" %>
      </p>
      <p>
        <%= f.label t(:text) %><br>
        <%= f.text_area :text, class: "form-control", rows: "20" %>
      </p>
      <p>
        <%= f.submit t(:update), class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
