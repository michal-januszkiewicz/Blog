<% provide(:title, t(:new_article)) %>
<div class="row">
  <div class="col-md-12">
    <% if @article.errors.any? %>
      <div class="alert-error alert">
        <p>
          <%= t(:errors) %> (<%= @article.errors.count %>):
        </p>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h2><%= t(:new_article) %></h2>
    <%= form_for :article, url: articles_path, html: {class: "new-article-form"} do |f| %>
      <p>
        <%= f.label t(:title) %><br>
        <%= f.text_field :title, class: "form-control" %>
      </p>
      <p>
        <%= f.label t(:text) %><br>
        <%= f.text_area :text, class: "form-control", rows: "20" %>
      </p>
      <p>
        <%= f.submit t(:create), class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>