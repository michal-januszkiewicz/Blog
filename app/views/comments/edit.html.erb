<% provide(:title, "Edit comment") %>
<div class="row">
  <div class="col-md-12">
    <h2>Edit comment</h2>
    <%= form_for @comment, url: article_comment_path(@comment.article.id, @comment.id),
                 html: {class: "edit-comment-form"} do |f| %>
      <p>
        <%= f.label :content, class: "sr-only" %>
        <%= f.text_area :content, class: "form-control", rows: "5" %>
      </p>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <p>
        <%= f.submit "Update", class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
