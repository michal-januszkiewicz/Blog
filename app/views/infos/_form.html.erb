<div class="row">
  <div class="col-md-12">
    <% if @info.errors.any? %>
        <div class="alert-error alert">
          <p>
            <%= t(:errors) %>(<%= @info.errors.count %>)
          </p>
          <ul>
            <% @info.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <%= form_for @info,
                 html: {class: "new-info-form"} do |f| %>
        <p>
          <%= f.label :text, class: "sr-only" %>
          <%= f.text_area :text, class: "form-control comment-text-area", rows: "3",
                          placeholder: t(:p_info) %>
        </p>
        <p>
          <%= f.submit t(:add), class: "btn btn-primary" %>
        </p>
    <% end %>
  </div>
</div>
