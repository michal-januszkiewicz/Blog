<% provide(:title, t(:new_info)) %>
<div class="row">
  <div class="col-md-12">
    <% if @info.errors.any? %>
        <div class="alert-error alert">
          <p>
            <%= t(:errors) %> (<%= @info.errors.count %>):
          </p>
          <ul>
            <% @info.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <h2><%= t(:new_info) %></h2>
    <%= render "form" %>
  </div>
</div>
