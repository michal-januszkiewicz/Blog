<% provide(:title, t(:change_your_password)) %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                 html: { method: :put, class: "change-password-form" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <h2><%= t(:change_your_password) %></h2>

      <div class="field">
        <%= f.label :password, t(:new_password), class: "sr-only" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off",
                             class: "form-control", placeholder: t(:new_password) %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t(:confirm_new_password),
                    class: "sr-only" %>
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             class: "form-control", placeholder: t(:p_confirm_new_password) %>
      </div>

      <div class="actions">
        <%= f.submit t(:change_my_password), class: "btn btn-lg btn-primary btn-block login-btn" %>
      </div>
    <% end %>

    <!--<%= render "users/shared/links" %>-->
  </div>
</div>

