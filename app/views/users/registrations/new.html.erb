<% provide(:title, t(:sign_up)) %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: {class: "register-form"}) do |f| %>
      <%= devise_error_messages! %>

      <h2><%= t(:sign_up) %></h2>
      <div class="field">
        <%= f.label t(:name), class: "sr-only" %>
        <%= f.text_field :name, autofocus: true, class: "form-control",
                         placeholder: t(:p_user_name) %>
      </div>

      <div class="field">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, class: "form-control",
                          placeholder: t(:p_email_address) %>
      </div>

      <div class="field">
        <%= f.label t(:password), class: "sr-only" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control",
                             placeholder: t(:p_password) %>
      </div>

      <div class="field">
        <%= f.label t(:password_confirmation), class: "sr-only" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",
                             placeholder: t(:p_password_confirmation) %>
      </div>

      <div class="actions">
        <%= f.submit t(:b_sign_up), class: "btn btn-lg btn-primary btn-block register-btn" %>
      </div>
    <% end %>

    <div class="register-links">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
