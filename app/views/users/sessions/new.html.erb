<% provide(:title, t(:login)) %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                   html: {class: "login-form"}) do |f| %>
        <h2 class="login-heading"><%= t(:log_in) %></h2>
        <div class="field">
          <%= f.label :login, class: "sr-only" %>
          <%= f.text_field :login, autofocus: true, placeholder: t(:p_user_name_or_email_address),
                           class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t(:password), class: "sr-only" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: t(:p_password) ,
                               class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span><%= t(:remember_me) %></span>
            <% end %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit t(:login), class: "btn btn-lg btn-primary btn-block login-btn" %>
        </div>
      <% end %>

      <div class="login-links">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
