<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'The Blog', root_path, class: 'navbar-brand site-name nav-link' %>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li><%= link_to t(:home), root_path, class: 'nav-link home-link' %></li>
          <li><%= link_to t(:infos), infos_path, class: 'nav-link infos-link' %></li>
          <li><%= link_to t(:articles), articles_path, class: 'nav-link articles-link' %></li>
          <% if current_user.try(:admin) %>
            <li><%= link_to t(:users), users_path, class: 'nav-link users-link' %></li>
          <% end %>
          <li><%= link_to t(:contact), contact_path, class: 'nav-link contact-link' %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <li>
                <%= link_to ('<i class="glyphicon glyphicon-user"></i> ' + t(:my_account) ).html_safe,
                            user_path(current_user.id),
                            class: 'nav-link my-account-link' %>
              </li>
              <li>
                <%= link_to ('<i class="glyphicon glyphicon-log-out"></i> ' + t(:logout)).html_safe,
                            destroy_user_session_path, :method=>'delete',
                            class: 'nav-link logout-link' %>
              </li>
          <% else %>
              <li>
                <%= link_to ('<i class="glyphicon glyphicon-user"></i> ' + t(:create_account)).html_safe,
                            new_user_registration_path,
                            class: 'nav-link create-account-link' %>
              </li>
              <li>
                <%= link_to ('<i class="glyphicon glyphicon-log-in"></i> ' + t(:login)).html_safe,
                            new_user_session_path,
                            class: 'nav-link login-link' %>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
